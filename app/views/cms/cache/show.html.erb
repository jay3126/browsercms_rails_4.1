<% use_page_title "Page Cache" %>
<%= render layout: 'page_title' do %>
  <p class="pull-right">
    <%= link_to "Clear", cache_path, class: 'btn btn-default http_delete', :rel=>'clear-cache' %>
  </p>
<% end %>
<div class="col-sm-12">
<%= render layout: 'main_content' do %>
    <p class="well">The CMS caches pages which are frequently accessed by guest users to increase throughput. If a page appears stale, you may manually clear this page cache.</p>
<% end %>
</div
>